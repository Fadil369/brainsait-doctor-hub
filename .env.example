# BrainSait Doctor Portal Environment Configuration
# Copy this file to .env.local and fill in the values

# ============================================
# APPLICATION
# ============================================
VITE_APP_NAME="BrainSait Doctor Portal"
VITE_APP_VERSION="1.0.0"

# ============================================
# BACKEND API (REQUIRED FOR PRODUCTION)
# ============================================
# Backend API base URL
# Development: http://localhost:3000
# Staging: https://api-staging.brainsait.sa
# Production: https://api.brainsait.sa
VITE_API_BASE_URL=

# API Key for backend authentication
VITE_API_KEY=

# Environment (development, staging, production)
VITE_ENVIRONMENT=development

# ============================================
# FEATURE FLAGS (SECURITY)
# ============================================
# Enable backend authentication (REQUIRED for production)
VITE_BACKEND_AUTH_ENABLED=false

# Enable encrypted storage (REQUIRED for production)
VITE_ENCRYPTED_STORAGE_ENABLED=false

# Enable audit logging (REQUIRED for production)
VITE_AUDIT_LOGGING_ENABLED=false

# ============================================
# NPHIES INTEGRATION
# ============================================
# Reference: https://nphies.sa
VITE_NPHIES_API_URL="https://api.nphies.sa/v1"
VITE_NPHIES_PROVIDER_ID=""
VITE_NPHIES_PROVIDER_NAME=""
VITE_NPHIES_FACILITY_ID=""
VITE_NPHIES_ENV="sandbox"  # sandbox | production
VITE_NPHIES_API_KEY=

# ============================================
# EXTERNAL INTEGRATIONS
# ============================================
# External Appointment System Integration
VITE_APPOINTMENT_SYSTEM="generic"  # generic | veradigm | epic | cerner | custom
VITE_APPOINTMENT_API_URL=""
VITE_APPOINTMENT_API_KEY=""
VITE_APPOINTMENT_SYNC_ENABLED="false"
VITE_APPOINTMENT_SYNC_INTERVAL="15"  # minutes

# Telemedicine
VITE_TELEMEDICINE_PROVIDER=""  # daily | twilio | agora
VITE_TELEMEDICINE_API_KEY=""

# Analytics (optional)
VITE_ANALYTICS_ID=""

# ============================================
# FEATURE FLAGS
# ============================================
VITE_FEATURE_TELEMEDICINE="true"
VITE_FEATURE_AI_INSIGHTS="true"
VITE_FEATURE_OFFLINE_MODE="false"

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Session timeout (in minutes)
VITE_SESSION_TIMEOUT=30

# Enable MFA (Multi-Factor Authentication)
VITE_MFA_ENABLED=false

# ============================================
# PRODUCTION DEPLOYMENT CHECKLIST
# ============================================
# Before deploying to production, ensure:
# ✅ VITE_API_BASE_URL points to production backend API
# ✅ VITE_API_KEY is set with a strong, secure key
# ✅ VITE_ENVIRONMENT=production
# ✅ VITE_BACKEND_AUTH_ENABLED=true
# ✅ VITE_ENCRYPTED_STORAGE_ENABLED=true
# ✅ VITE_AUDIT_LOGGING_ENABLED=true
# ✅ NPHIES credentials are properly configured
# ✅ Backend server is deployed and healthy
# ✅ Database is configured with encryption at rest
# ✅ SSL/TLS certificates are installed and valid
# ✅ Security audit has been completed
# ✅ Penetration testing has been performed
# ✅ HIPAA/PDPL compliance review completed
